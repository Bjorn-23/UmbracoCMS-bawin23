@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var paragraphContent = Model?.Content.Value<string>("paragraphContent") ?? "";
    var textAlign = (Model?.Content.Value<bool>("alignCenter") == true) ? "text-align-center" : "";
    
    if (Model?.Content.Value<bool>("alignCenter") == false)
    {
        textAlign = (Model?.Content.Value<bool>("alignLeft") == true) ? "text-align-start" : "";
    }
}

@if(!string.IsNullOrEmpty(paragraphContent))
{
    <p class="@textAlign">@paragraphContent</p>
}