@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var alignTextCenter = (Model?.Content.Value<bool>("alignTextCenter") == true ) ? "text-align-center" : "";
    var padContent = Model?.Content.Value<string>("padContentInMobileDesign")?.ToLower().Replace(" ", "-") ?? "";
    var hideInMobileDesign = (Model?.Content.Value<bool>("hideInMobileDesign") == true) ? "hide" : "";
}

@if (Model != null)
{
    <div class="dynamic-container @alignTextCenter @padContent @hideInMobileDesign">
        @await Html.GetBlockGridItemAreasHtmlAsync(Model)
    </div>    
}
